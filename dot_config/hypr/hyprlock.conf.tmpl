$font = JetBrainsMono Nerd Font Propo

# GENERAL
general {
  disable_loading_bar = true
  hide_cursor = true
}

# Auth
auth {
  fingerprint {
    enabled = true
    ready_message = Scan fingerprint to unlock
    present_message = Scanning...
    retry_delay = 250 # in milliseconds
  }
}

# BACKGROUND
background {
  monitor =
  path = $HOME/.local/share/backgrounds/twist.png
  blur_passes = 0
  color = rgb({{ .colors.background | trimPrefix "#" }})
}

# TIME
label {
  monitor =
  text = $TIME
  color = rgb({{ .colors.foreground | trimPrefix "#" }})
  font_size = 90
  font_family = $font
  position = -30, 0
  halign = right
  valign = top
}

# DATE
label {
  monitor =
  text = cmd[update:43200000] date +"%A, %d %B %Y"
  color = rgb({{ .colors.foreground | trimPrefix "#" }})
  font_size = 25
  font_family = $font
  position = -30, -150
  halign = right
  valign = top
}

# USER AVATAR
image {
  monitor =
  path = $HOME/.face
  size = 100
  border_color = rgb({{ .colors.magenta | trimPrefix "#" }})
  position = 0, 75
  halign = center
  valign = center
}

# INPUT FIELD
input-field {
  monitor =
  size = 300, 60
  outline_thickness = 4
  dots_size = 0.2
  dots_spacing = 0.2
  dots_center = true
  outer_color = rgb({{ .colors.magenta | trimPrefix "#" }})
  inner_color = rgb({{ .colors.base02 | trimPrefix "#" }})
  font_color = rgb({{ .colors.foreground | trimPrefix "#" }})
  fade_on_empty = false
  placeholder_text = ó°Œ¾ <i>Session locked</i>
  hide_input = false
  check_color = rgb({{ .colors.magenta | trimPrefix "#" }})
  fail_color = rgb({{ .colors.red | trimPrefix "#" }})
  fail_text = <i>$FAIL <b>($ATTEMPTS)</b></i>
  capslock_color = {{ .colors.yellow }}
  position = 0, -47
  halign = center
  valign = center
}
