[user]
name = Shad Kaske
email = {{ .chezmoi.config.data.email }}
[core]
editor = nvim
[merge]
tool = meld
[diff]
tool = nvimdiff
[mergetool "meld"]
cmd = meld "$LOCAL" "$BASE" "$REMOTE" --output="$MERGED"
[mergetool]
keepBackup = false
prompt = false
[difftool "nvimdiff"]
cmd = nvim -f -c "Gdiffsplit!" "$MERGED"
[mergetool "nvim"]
cmd = nvim -f -c "Gdiffsplit!" "$MERGED"
layout = "LOCAL,BASE,REMOTE / MERGED"
[difftool "nvimdiff"]
cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""
[pull]
rebase = true
[init]
defaultBranch = main
[protocol "file"]
allow = always
[push]
autoSetupRemote = true
