#!/bin/bash

case "$1" in
# Ending GameMode
"end")
  systemctl --user start kanata.service
  {{ if .hasHyprland -}}
  systemctl --user restart mako.service waybar.service
  {{ end -}}
  ;;
# Starting GameMode
"start")
  systemctl --user stop kanata.service
  {{ if .hasHyprland -}}
  killall -SIGUSR1 waybar >/dev/null 2>&1
  systemctl --user stop mako.service
  {{ end -}}
  ;;
*)
  echo default
  ;;
esac
