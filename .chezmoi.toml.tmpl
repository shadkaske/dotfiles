  email = {{ $myEmail | quote }}
  hasHyprland = {{ $hasHyprland }}
  isPersonal = {{ $isPersonal }}

[git]
  autoCommit = false
  autoPush = false

[merge]
  command = "nvim"
  args = [
      "-d",
      {{ printf "%q" "{{ .Destination }}" }},
      {{ printf "%q" "{{ .Source }}" }},
      {{ printf "%q" "{{ .Target }}" }},
  ]
